#pragma package(smart_init)
#pragma resource "*.dfm"
int x=0,y=0,r=0,xkon,ykon,xotn,yotn,uggr;
float s=0,l=0;
int *px=&x,*py=&y,*pr=&r;

TFormCircle *FormCircle;
//---------------------------------------------------------------------------
__fastcall TFormCircle::TFormCircle(TComponent* Owner)
	: TForm(Owner)
{
}
