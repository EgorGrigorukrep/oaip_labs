#pragma package(smart_init)
Production::Production(const char* n,int a, int number){
	int i=0;
	while(n[i]!='\0'){
		name[i]=n[i];
	}
	amount=a;
	numberOfCEH=number;
}
char* Production::getName(){ return name;}
void Production::setName(char* str){
	int i;
    while(n[i]!='\0'){
		name[i]=n[i];
	}
}
int Production::getAmount(){ return amount;}
void Production::setAmount(int a) { amount=a;}
int Production::getNumberOfCEH(){return numberOfCEH;}
void Production::setNumberOfCEH(int number){ numberOfCEH=number;}